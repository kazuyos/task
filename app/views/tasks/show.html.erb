<div class="main posts-show">
  <div class="container">
    <%= @task.task %>
      <div class="post-user-name">
        <img class="posts-img" src="<%= "/user_images/#{@user.image_name}" %>">
        <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>
    <div class="post-time">
        <p>
          <%= @task.created_at %>
        </p>
      <% if Like.find_by(user_id: @current_user.id, task_id: @task.id) %>
        いいね! 済み
        <%= link_to("/likes/#{@task.id}/destroy", {method: "post"}) do %>
          <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
      <% else %>
        いいね! していません
        <%= link_to("/likes/#{@task.id}/create", {method: "post"}) do %>
          <span class="fa fa-heart like-btn"></span>
        <% end %>
      <% end %>
      <%= @likes_count %>
      <% if @task.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/tasks/#{@task.id}/edit") %>
          <%= link_to("削除", "/tasks/#{@task.id}/destroy", {method: "post"}) %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>